<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"

    android:background="#3f374f"

    tools:context="com.example.win7.braintoaster.Question">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Question 1"
        android:id="@+id/textView10"
        android:textColor="#ffffff"
        android:layout_alignParentTop="true"
        android:textSize="30dp"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffff"
        android:id="@+id/textView11"
        android:textSize="30dp"
        android:layout_below="@+id/textView10"
        android:layout_alignParentStart="true"
        android:layout_marginTop="53dp" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="#3f3049"
        android:textSize="30dp"
        android:onClick="click1"
        android:textColor="#ffffff"
        android:id="@+id/button21"
        android:layout_marginTop="89dp"
        android:layout_below="@+id/textView11"
        android:layout_alignParentStart="true" />

    <Button
        android:background="#3f3049"
        android:textSize="30dp"
        android:textColor="#ffffff"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:onClick="click2"
        android:id="@+id/button22"
        android:layout_above="@+id/button23"
        android:layout_alignStart="@+id/button24" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="#3f3049"
        android:textSize="30dp"
        android:textColor="#ffffff"
        android:id="@+id/button23"
        android:onClick="click3"
        android:layout_marginTop="43dp"
        android:layout_below="@+id/button21"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="#3f3049"
        android:textSize="30dp"
        android:textColor="#ffffff"
        android:id="@+id/button24"
        android:onClick="click4"
        android:layout_alignTop="@+id/button23"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:textSize="30dp"
        android:textColor="#ffffff"
        android:id="@+id/textView12"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:id="@+id/progressBar"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:max="5"
        android:progress="0"
        android:indeterminate="false"
        android:mirrorForRtl="false" />

</RelativeLayout>
